
{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        // Tùy chỉnh các quy tắc nếu cần
        // Ví dụ: Bỏ qua lỗi yêu cầu JSDoc cho hàm/biến
        "valid-jsdoc": "off",
        // Cho phép console.log và console.error trong dev (trong production nên loại bỏ)
        "no-console": "off", 
        // Cho phép sử dụng các biến mà không cần khai báo tường minh (ví dụ: biến global)
        "no-unused-vars": ["warn", { "args": "none" }], // Cảnh báo thay vì lỗi, bỏ qua args
        // Tắt rule yêu cầu tên hàm phải có chữ hoa đầu tiên (thích hợp cho React Component)
        "new-cap": "off"
    }
}
